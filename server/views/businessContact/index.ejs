<% include ../partials/header.ejs %>
    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3 style="text-align:center">Business Contacts List </h3>
          <br><br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead id="myTable">
                <tr>
                  <th class="text-center">Name</th>
                  <th class="text-center">Number</th>
                  <th class="text-center">E-mail</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < contact.length; count++) { %>
                <tr>
                  <td class="text-center"><%= contact[count].Name %></td>
                  <td class="text-center"><%= contact[count].Number %></td>
                  <td class="text-center"><a href="mailto:<%= contact[count].Email %>"><%= contact[count].Email %></a></td>
                  <td class="text-center">
                    <!-- EDIT BUTTON -->
                    <a href="/businessContact/<%= contact[count]._id %>" class="btn btn-primary" role="button"><i class="fa fa-pencil-square-o"></i> Edit</a>
                  </td>

                  <td class="text-center">
                    <!-- DELETE BUTTON -->
                    <a href="/businessContact/delete/<%= contact[count]._id %>" class="btn btn-danger" role="button"><i class="fa fa-trash-o"></i> Delete</a>                  
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
            <br><br>
            <!-- Add Button -->
            <a href="/businessContact/add" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Add a new business contact</a>
          </div> <!-- .table-responsive -->
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>
<% include ../partials/footer.ejs %>


